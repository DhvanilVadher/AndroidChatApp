<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MessageActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/fui_ic_mail_white_24dp">
    <ImageView
        android:id="@+id/messageProfile"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:background="@drawable/images" />
    <TextView
        android:id="@+id/MessageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:text="TextView"
        android:textSize="25sp"
        android:textStyle="bold"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="10"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/sendMessageText"
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:background="#008cff"
            android:hint="Enter Your Message Here"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:onClick="SendMessageToReceiever"/>
    </LinearLayout>
</LinearLayout>